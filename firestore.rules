rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      // Allow public read if isPublicProfile is true
      allow read: if resource != null && resource.data.isPublicProfile == true;
      // Allow authenticated user to read/write their own profile
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /objects/{objectId} {
      // Allow public read for all objects
      allow read: if resource != null && resource.data.isPublic == true;
      // Allow authenticated user to read/write their own objects
      allow read, write: if request.auth != null && (resource == null || resource.data.userId == request.auth.uid);
    }

    match /rotations/{rotationId} {
      // Allow public read for all rotations
      allow read: if resource != null && resource.data.isPublic == true;
      // Allow authenticated user to read/write their own rotations
      allow read, write: if request.auth != null && (resource == null || resource.data.userId == request.auth.uid);
    }
  }
}

